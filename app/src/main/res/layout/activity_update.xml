<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Update"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="#000"
    >



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/buler_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/P_img_profile"
                        android:layout_width="118dp"
                        android:layout_height="113dp"
                        android:layout_gravity="center"
                        android:onClick="Choose_Image"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        app:civ_border_color="#fff"
                        app:civ_border_width="2dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#000"
                        app:civ_shadow_radius="7" />


                    <EditText
                        android:paddingLeft="15dp"
                        android:id="@+id/new_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="enter name"
                        android:textColor="@color/nebity"
                        android:textColorHint="@color/orange"/>

                    <EditText
                        android:paddingLeft="15dp"
                        android:id="@+id/new_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="phone"
                        android:textColor="@color/nebity"
                        android:textColorHint="@color/orange"/>
                    <EditText
                        android:textColor="@color/nebity"
                        android:textColorHint="@color/orange"
                        android:id="@+id/new_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:hint="enter password"/>
                    <EditText
                        android:textColor="@color/nebity"
                        android:textColorHint="@color/orange"
                        android:paddingLeft="15dp"
                        android:id="@+id/new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="enter email"/>

                    <Button
                        android:onClick="Send_Update"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="update"
                        android:textColor="@color/nebity"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>




</RelativeLayout>